@model WebApplication_Resto.Models.Comensal

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-0 text-white">
    <div class="container py-4 bg-success bg-gradient">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1>Comensales</h1>
                <p class="lead mb-0"><i>Sistema de gestión administrativa</i></p>
            </div>
        </div>
    </div>
</section>
<br />

<h4>Editar</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(c => c.Nombre)
                @Html.TextBoxFor(c => c.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Apellido)
                @Html.TextBoxFor(c => c.Apellido, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Apellido, "", new { @class = "text-danger" })
                @*<label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Dni)
                @Html.TextBoxFor(c => c.Dni, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Dni, "", new { @class = "text-danger" })
                @*<label asp-for="Dni" class="control-label"></label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.NroCelular)
                @Html.TextBoxFor(c => c.NroCelular, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.NroCelular, "", new { @class = "text-danger" })
                @*<label asp-for="NroCelular" class="control-label"></label>
                    <input asp-for="NroCelular" class="form-control" />
                    <span asp-validation-for="NroCelular" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Email)
                @Html.TextBoxFor(c => c.Email, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                @*<label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
